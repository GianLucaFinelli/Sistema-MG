@model IEnumerable<AdministracionMinisterio.Models.Ministerio>



<div class="m-4">
    <h2 class="">Ministerios</h2>
    <h5 class="">Los listados del ministerios se encuentran disponibles</h5>
</div>
<div class="mx-4 my-3">
    @Html.ActionLink("Agregar Ministerio", "Create",null, new { @class= "btn btn-LostMemory" })
</div>

<div class="border-bottom mx-4 mt-5">
    <h6>Listado de Ministerios</h6>
</div>


<div class="m-4 d-flex justify-content-start flex-wrap">
    @foreach (var item in Model)
    { 
        <div class="carta">
            <div class="carta-header">
                <span class="text-dark">@Html.DisplayNameFor(model => model.Nombre)</span> : <span class="ml-2">@Html.DisplayFor(modelItem => item.Nombre)</span>
            </div>
            <div class="carta-body">
                <div><strong>@Html.DisplayNameFor(model => model.Localidad):</strong>  <span class="ml-2">@Html.DisplayFor(modelItem => item.Localidad)</span></div>
                <div><strong>@Html.DisplayNameFor(model => model.Direccion):</strong> <span class="ml-2">@Html.DisplayFor(modelItem => item.Direccion)</span></div>
                <div>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </div>
            </div>
        </div>
    }
    </div>

