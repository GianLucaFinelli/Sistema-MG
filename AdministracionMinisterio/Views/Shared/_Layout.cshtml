<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administracion - Ministerio</title>
    <script src="https://kit.fontawesome.com/a8b228e3e3.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Kanit:wght@300;600&family=Pacifico&family=Staatliches&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <main>
        @Html.Partial("_Aside")
        <section class="section">
            <nav class="navbar navbar-expand-lg navbar-dark bg-burningOrange">
                <a class="navbar-brand" href="#">GobSite</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="d-sm-block d-md-none"> <a href="/Ministerios/Index" class = "nav-link" ><i class="fas fa-hotel mr-2 text-white"></i> Ministerios</a></li>
                        <li class="d-sm-block d-md-none"> <a href="/Ministros/Index" class = "nav-link" ><i class="fas fa-user-tie mr-2 text-white"></i> Ministro</a></li>
                        <li class="d-sm-block d-md-none"> <a href="/Funcionarios/Index" class = "nav-link" ><i class="fas fa-user mr-2 text-white"></i> Funcionarios</a></li>
                    </ul>
                </div>
            </nav>
            <div class="m-4">
                @RenderBody()
            </div>
            @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>*@
        </section>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
